<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.iu.s1.member.MemberRepository">
	<select id="memberLogin" parameterType="MemberVO" resultType="MemberVO">
		select * from member where mem_id=#{mem_id} and mem_pw=#{mem_pw}
	</select>
	
	<select id="memberIdCheck" parameterType="MemberVO" resultType="MemberVO">
		select * from member where mem_id=#{mem_id}
	</select>
	
	<insert id="memberJoin" parameterType="MemberVO">
		insert into member values(#{mem_id},#{mem_pw},#{mem_name},#{mem_email},#{mem_phone},#{mem_storeNum},#{mem_id},#{mem_address},0)
	</insert>
	
</mapper>