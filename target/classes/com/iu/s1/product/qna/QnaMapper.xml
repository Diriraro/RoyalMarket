<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iu.s1.product.qna.QnaMapper">

	<insert id="qnaInsert" parameterType="QnaVO">
		insert into product_qna
		values(0,#{sell_num},#{pq_storeNum},#{pq_contents},now(),#{pq_storeName})
	</insert>

	<delete id="qnaDelete" parameterType="Long">
		delete from product_qna where pq_num=#{pq_num}
	</delete>

    <select id="qnaList" parameterType="Long" resultType="QnaVO">
        SELECT * FROM product_qna where sell_num=#{sell_num} ORDER BY pq_num desc
    </select>
    

</mapper>